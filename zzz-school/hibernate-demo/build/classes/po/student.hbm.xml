<hibernate-mapping package="po">
	<class name="po.Student" table="stuinfo">
		<id name="id"  column="id"> 
			<generator class="identity"/>  
		</id>   
		<property name="sno" column="sno"/>
		<property name="sname" column="sname"/>
		<property name="department" column="department"/>
		<property name="CET4" column="CET4"/>
		<property name="CET6" column="CET6"/>
	</class>
</hibernate-mapping> 